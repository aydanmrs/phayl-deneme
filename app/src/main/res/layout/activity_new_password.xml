<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewPasswordActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow"
            android:id="@+id/arrow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="36dp"
            android:layout_marginStart="20dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/createPassword"
            android:text="Yeni şifrə yaradın"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/arrow"
            android:textStyle="bold"
            android:textSize="29sp"
            android:textColor="#1F1D1B"
            android:layout_marginStart="20dp"
            android:layout_marginTop="28dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtView"
            android:text="Yeni, güclü və unikal şifrə yaradaraq hesabınızı gücləndirin."
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/createPassword"
            android:textSize="16dp"
            android:layout_marginEnd="20sp"
            android:textColor="#908F8F"
            android:layout_marginStart="20dp"
            android:layout_marginTop="12dp" />

        <TextView
            android:id="@+id/email"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="18dp"
            android:text="Şifrəniz"
            android:textColor="#1F1D1B"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtView" />

        <EditText
            android:id="@+id/passwordEditTxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="6dp"
            android:singleLine="true"
            android:background="@drawable/edittext_simple"
            android:layout_marginEnd="20dp"
            android:inputType="textPassword"
            android:hint="............"
            android:textColor="#1F1D1B"
            android:textColorHint="#1F1D1B"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/email" />

        <ImageView
            android:id="@+id/eyeIcon1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/passwordEditTxt"
            android:src="@drawable/closed_eye"
            app:layout_constraintBottom_toBottomOf="@id/passwordEditTxt"
            app:layout_constraintEnd_toEndOf="@id/passwordEditTxt" />

        <TextView
            android:id="@+id/password"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="20dp"
            android:text="Yenidən şifrəniz"
            android:textColor="#1F1D1B"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/passwordEditTxt" />


        <EditText
            android:id="@+id/newPasswordEditTxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="20dp"
            android:hint="sifre123!"
            android:textColor="#1F1D1B"
            android:textColorHint="#908F8F"
            android:textSize="15sp"
            android:singleLine="true"
            android:background="@drawable/edittext_simple"
            android:inputType="textPassword"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/password" />

        <ImageView
            android:id="@+id/eyeIcon2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/newPasswordEditTxt"
            android:src="@drawable/closed_eye"
            app:layout_constraintBottom_toBottomOf="@id/newPasswordEditTxt"
            app:layout_constraintEnd_toEndOf="@id/newPasswordEditTxt" />


        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:id="@+id/saveButton"
            app:layout_constraintTop_toBottomOf="@+id/newPasswordEditTxt"
            android:background="@drawable/button_login"
            android:text="Yadda saxla"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="100dp"
            android:layout_marginTop="100dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textAllCaps="false"
            android:textColor="#FDFDFD"
            android:textSize="20dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>


